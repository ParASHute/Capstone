<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <corners
                android:radius="15dp" />
            <solid
                android:color="@color/drakgray" />
        </shape>
    </item>

    <!-- pressed -->


    <item android:state_focused="true">
        <shape>
            <corners
                android:radius="15dp" />
            <solid
                android:color="@color/drakgray" />
        </shape>
    </item>
    <!-- focused -->


    <item>
        <shape>
            <corners
                android:radius="15dp" />
            <solid
                android:color="#e4f5e4" />
        </shape>
    </item>
    <!-- default -->
</selector>